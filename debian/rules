#!/usr/bin/make -f

include /usr/share/ql-deb-utils/Makefile

%:
	dh $@ --with=autotools-dev

override_dh_auto_configure:
	./autogen.sh
	dh_auto_configure -- --with-system-pgm

override_dh_strip:
	dh_strip --dbg-package=libzmq5-dbg

override_dh_auto_clean:
	dh_auto_clean
	rm -f configure doc/Makefile.in src/Makefile.in src/platform.hpp.in \
	      tests/Makefile.in Makefile.in aclocal.m4 \
	      builds/msvc/Makefile.in config/compile config/depcomp \
	      config/install-sh config/libtool.m4 config/ltmain.sh \
	      config/missing config/test-driver
